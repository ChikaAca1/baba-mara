# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Anthropic Claude API (for AI readings)
ANTHROPIC_API_KEY=sk-ant-your-api-key

# OpenAI API (Required for TTS, optional for AI alternative)
OPENAI_API_KEY=sk-your-openai-api-key

# Text-to-Speech Configuration
ENABLE_TTS=true # Set to 'false' to disable audio generation and save costs
TTS_PROVIDER=openai # 'openai' (cheaper) or 'elevenlabs' (higher quality)

# OpenAI TTS (Recommended - $0.015 per 1K characters)
# Uses OPENAI_API_KEY from above

# ElevenLabs API (Optional - Higher quality but more expensive)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID_EN=your-english-voice-id
ELEVENLABS_VOICE_ID_TR=your-turkish-voice-id
ELEVENLABS_VOICE_ID_SR=your-serbian-voice-id

# Payten Payment API (Phase 6) - REQUIRED for payment features
PAYTEN_API_KEY=your-payten-api-key
PAYTEN_MERCHANT_ID=your-merchant-id
PAYTEN_ENVIRONMENT=sandbox # 'sandbox' or 'production'

# LiveKit (for voice calls - Phase 5) - REQUIRED for voice features
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_URL=wss://your-livekit-server-url

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
